{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <h1 class="text-center">Listado Productos</h1>

    <table class="table table-dark table-striped m-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Fabricante</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.producto }}</td>
                <td>{{ producto.precio }}</td>
                <td>{{ producto.getFkFabricante() }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_producto_show', {'id': producto.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_producto_edit', {'id': producto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success m-3" href="{{ path('app_producto_new') }}">Create new</a>
{% endblock %}
