{% extends 'base.html.twig' %}

{% block title %}Fabricante index{% endblock %}

{% block body %}
    <h1>Fabricante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fabricante</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fabricante in fabricantes %}
            <tr>
                <td>{{ fabricante.id }}</td>
                <td>{{ fabricante.fabricante }}</td>
                <td>
                    <a href="{{ path('app_fabricante_show', {'id': fabricante.id}) }}">show</a>
                    <a href="{{ path('app_fabricante_edit', {'id': fabricante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fabricante_new') }}">Create new</a>
{% endblock %}
